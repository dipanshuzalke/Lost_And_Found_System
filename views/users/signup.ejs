<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <h2 class="col-6 offset-3">Signup</h2>
  <div class="col-6 offset-3">
    <form method="POST" action="/signup" novalidate class="needs-validation">
      <div class="mb-3">
        <label for="fullName" class="form-label">Name</label>
        <input
          type="text"
          name="fullName"
          placeholder=""
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <label for="department" class="form-label">Department</label>
        <input
          type="text"
          name="department"
          placeholder=""
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <label for="semester" class="form-label">Semester</label>
        <input
          type="text"
          name="semester"
          placeholder=""
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <label for="section" class="form-label">Section</label>
        <input
          type="text"
          name="section"
          placeholder=""
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <label for="contact" class="form-label">Contact</label>
        <input
          type="number"
          name="contact"
          placeholder=""
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          name="username"
          id="username"
          placeholder=""
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          type="email"
          name="email"
          id="email"
          placeholder=""
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          placeholder=""
          class="form-control"
          required
        />
      </div>
      <button class="btn btn-success">Signup</button>
    </form>
  </div>
</div>
