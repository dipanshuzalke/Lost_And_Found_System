<% layout("/layouts/boilerplate") %>

<style>
    .container {
        margin-top: 30px;
    }
    .card {
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
    }
    .card-title {
        font-size: 1.5rem;
        font-weight: 600;
    }
    .badge-lost {
        background-color: #dc3545;
    }
    .badge-found {
        background-color: #28a745;
    }
    .no-responses {
        text-align: center;
        font-size: 1.2rem;
        margin-top: 50px;
    }
</style>

<div class="container">
    <h1 class="text-center mb-4">My Lost & Found Reports</h1>
    <% if (userReports.length === 0) { %>
        <div class="no-responses">
            <p>No reports found.</p>
        </div>
    <% } else { %>
        <div class="row">
            <% userReports.forEach(function(report) { %>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><%= report.type === 'lost' ? 'Lost Item' : 'Found Item' %></h5>
                            <p class="card-text">
                                <strong>Ouestion:</strong> <%= report.question %><br>
                                <% if (report.type === 'lost') { %>
                                    <strong>Location Lost:</strong> <%= report.location %><br>
                                <% } else { %>
                                    <strong>Where Found:</strong> <%= report.location %><br>
                                <% } %>
                                <strong>Date:</strong> <%= report.date.toDateString() %>
                            </p>
                            <span class="badge <%= report.type === 'lost' ? 'badge-lost' : 'badge-found' %>">
                                <%= report.type === 'lost' ? 'Lost' : 'Found' %>
                            </span>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } %>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>