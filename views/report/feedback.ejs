<% layout("/layouts/boilerplate") %>
  <div class="container-fluid mt-3">
    <div class="mb-3">
      <div class="row mt-3 form-container">
        <div class="col-8 offset-2 form-content">
          <div class="form-data">
            <h2 class="fw-bold admin mt-3">Feedback form</h2>
            <hr class="admin" />
            <p class="mt-3 form-label">Please share your opinion</p>
            <form method="POST" action="/feedback" novalidate class="needs-validation">
              <div class="rating-box rating mb-4 mt-3">
                <h3>Rate our services!</h3>
                <div class="stars">
                  <input type="radio" id="star5" name="feedback[rating]" value="1" />
                  <label for="rating" class="fa-solid fa-star"></label>

                  <input type="radio" id="star4" name="feedback[rating]" value="2" />
                  <label for="rating" class="fa-solid fa-star"></label>

                  <input type="radio" id="star3" name="feedback[rating]" value="3" />
                  <label for="rating" class="fa-solid fa-star"></label>

                  <input type="radio" id="star2" name="feedback[rating]" value="4" />
                  <label for="rating" class="fa-solid fa-star"></label>

                  <input type="radio" id="star1" name="feedback[rating]" value="5" />
                  <label for="rating" class="fa-solid fa-star"></label>
                </div>
              </div>
              <div class="mb-3">
                <label for="comment" class="form-label rating">What can be improved?</label>
                <textarea name="feedback[comment]" class="form-control" rows="4"
                  placeholder="Let's us know what can be done better" required></textarea>
                <div class="invalid-feedback">This field is required.</div>
              </div>
              <div class="mb-3">
                <label for="email" class="form-label rating">Your email</label>
                <div class="email-input">
                  <span class="email-icon">
                    <i class="fa-solid fa-at"></i>
                  </span>
                  <input name="feedback[email]" placeholder="" type="email" class="form-control"
                    aria-describedby="emailHelp" required />
                </div>
                <div id="emailHelp" class="form-text">
                  We'll never share your email with anyone else.
                </div>
              </div>
              <div class="invalid-feedback">Please provide email.</div>
              <button type="submit" class="btn btn-dark">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>