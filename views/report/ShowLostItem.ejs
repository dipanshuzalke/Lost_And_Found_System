<% layout("/layouts/boilerplate") %>
<div class="row">
  <div class="card-container show-report offset-5">
    <div class="card grid" style="width: 18rem">
      <div class="card-header category"><%= lostItem.itemType%></div>
      <img src="<%= lostItem.image.url %>" class="card-img-top" alt="..." />
      <div class="card-body">
        <p class="card-title">Owned by <b><%= lostItem.owner.fullName %></b></p>
        <p class="card-title">Item Name: <b><%= lostItem.itemName %></b></p>
        <p class="card-text">Description: <%= lostItem.description %></p>
        <p class="card-text">Location: <%= lostItem.location %></p>
        <p class="card-text">Question: <%= lostItem.question %></p>
        <p class="card-text">Item type: <%= lostItem.itemType %></p>
        <p class="card-text">Status: <%= lostItem.status %></p>
        <!-- <a href="#" class="btn btn-primary">Go somewhere</a> -->
      </div>
    </div>

    <% if(currUser && currUser._id.equals(lostItem.owner._id)) { %>
    <div class="btns show-btns">
      <a
        href="/report/lost/<%= lostItem._id %>/edit"
        class="btn edit-btn"
        >Edit</a
      >
      <form method="POST" action="/report/lost/<%= lostItem._id %>?_method=DELETE">
        <button class="btn delete-btn">Delete</button>
      </form>
    </div>
    <% } %>
  </div>
</div>
